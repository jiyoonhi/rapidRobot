<?xml version="1.0"?>
<launch>
  <!-- Arguments -->
  <!--arg name="model" default="minirapid1"/-->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom_ekf" />
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_global_planner" value="global_planner/GlobalPlanner"/>
    <rosparam file="$(find rapid)/launch/cases/case1-3/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find rapid)/launch/cases/case1-3/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find rapid)/launch/cases/case1-3/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find rapid)/launch/cases/case1-3/params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find rapid)/launch/cases/case1-3/params/move_base_params.yaml" command="load" />
    <rosparam file="$(find rapid)/launch/cases/case1-3/params/global_planner_params.yaml" command="load" />
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find rapid)/launch/cases/case1-3/params/dwa_local_planner_params.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
